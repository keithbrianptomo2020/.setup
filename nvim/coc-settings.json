{

  // Diagnostics settings
  "diagnostic.enable": true,
  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.hintSign": "!",
  "diagnostic.infoSign": "I",

  // Suggestion settings
  "suggest.timeout": 500,
  "suggest.maxCompleteItemCount": 20,

  // I like manage versions by my own, thanks.
  "coc.preferences.extensionUpdateCheck": "never",

  // I'm not a fan of CocList, so...
  "coc.preferences.useQuickfixForLocations": true,
  "list.previewHighlightGroup": "CocListMode",
  "list.autoResize": false,
  "list.extendedSearchMode": false,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },

  // Prettier settings
  "prettier.requireConfig": true,
  "prettier.onlyUseLocalVersion": true,
  "prettier.eslintIntegration": true,

  // tsserver settings
  "typescript.format.enabled": false,
  "javascript.format.enabled": false,

  // File source
  "coc.source.file.trimSameExts": [
    ".ts",
    ".js",
    ".tsx",
    ".jsx"
  ],

  // diagnostic-languageserver settings
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },

  // Custom LSPs
  "languageserver": {
    "stylable": {
      "module": "/usr/local/lib/node_modules/stylable-intelligence/dist/src/lib/server.js",
      "filetypes": ["stylable", "typescript.jsx", "javascript.jsx"]
    }
  }
}
